{
  "name": "pugstagram",
  "version": "1.0.0",
  "description": "Instagram para pugs con Svelte",
  "main": "./src/index",
  "scripts": {
    "build": "webpack --mode production",
    "start": "webpack-dev-server --open --mode development",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "test:updateSnap": "jest --updateSnapshot"
  },
  "keywords": [
    "javascript",
    "svelte"
  ],
  "author": "Miguel Segura <mianse@hotmail.com>",
  "license": "MIT",
  "jest": {
    "transform": {
      "\\.js$": "babel-jest",
      "\\.svelte$": "svelte-jester"
    },
    "moduleFileExtensions": [
      "js", "svelte"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/test.config.js"
    ]
  },
  "dependencies": {
    "svelte": "^3.20.1"
  },
  "devDependencies": {
    "@babel/core": "^7.9.0",
    "@babel/polyfill": "^7.8.7",
    "@babel/preset-env": "^7.9.5",
    "@testing-library/jest-dom": "^5.5.0",
    "@testing-library/svelte": "^3.0.0",
    "babel-jest": "^25.4.0",
    "babel-loader": "^8.1.0",
    "html-webpack-plugin": "^4.2.0",
    "jest": "^25.4.0",
    "svelte-jester": "^1.0.5",
    "svelte-loader": "^2.13.6",
    "webpack": "^4.42.1",
    "webpack-cli": "^3.3.11",
    "webpack-dev-server": "^3.10.3"
  }
}
